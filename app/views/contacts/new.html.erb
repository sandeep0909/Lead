<%= form_for @contact, :html => {class: 'new_contact form-horizontal'} do |f| %>
    <div class="row"><legend class="col-md-4 col-md-offset-4">Create Account:</legend></div>
    <fieldset>
        <div class="form-group">
            <%= f.label :name, 'Name*', class: 'col-md-4 control-label' %>
            <div class="col-md-5">
                <%= f.text_field :name, class: 'form-control' %>
            </div>
        </div>
        <div class="form-group">
            <%= f.label :email, 'Email*', class: 'col-md-4 control-label' %>
            <div class="col-md-5">
                <%= f.text_field :email, class: 'form-control' %>
            </div>
        </div>
        <div class="form-group">
            <%= f.label :phone, 'Phone*', class: 'col-md-4 control-label' %>
            <div class="col-md-5">
                <%= f.text_field :phone, class: 'form-control' %>
            </div>
        </div>
        <!-- <div class="form-group">
            <%= f.label :password_confirmation, 'Confirm Password*', class: 'col-md-4 control-label' %>
            <div class="col-md-5">
                <%= f.password_field :password_confirmation, class: 'form-control' %>
            </div>
        </div> -->
        <div class="form-group">
            <div class="col-md-8 col-md-offset-4">
                <%= f.submit 'Create Contact', class: 'btn btn-success' %>
                <%= link_to "Go Back", user_contacts_path(current_user), class: 'btn btn-primary' %>
            </div>
        </div>
    </fieldset>
<% end %>
